<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/manage_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="20dp"
            android:text="MANAGE PRODUCTS"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold">


        </TextView>

        <TextView
            android:id="@+id/add_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8EBBFF"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="20dp"
            android:text="ADD PRODUCT"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck">

        </TextView>

        <TextView
            android:id="@+id/sale_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="monospace"
            android:text="SALES REPORT"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:focusable="true"
            android:gravity="center"
            android:padding="20dp">


        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:focusable="true"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:fontFamily="monospace"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:focusable="true"
                android:gravity="left"
                android:paddingLeft="10dp">
            </TextView>

            <EditText
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:fontFamily="monospace"
                android:hint="e.g. Bear Brand"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#050505"
                android:textColorHint="#68050505"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:paddingLeft="20dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:focusable="true"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:fontFamily="monospace"
                android:text="Quantity"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:focusable="true"
                android:gravity="left"
                android:paddingLeft="10dp">
            </TextView>

            <EditText
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:fontFamily="monospace"
                android:hint="e.g. 300"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#050505"
                android:textColorHint="#68050505"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:paddingLeft="20dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:focusable="true"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:fontFamily="monospace"
                android:text="Purchase Price"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:focusable="true"
                android:gravity="left"
                android:paddingLeft="10dp">
            </TextView>

            <EditText
                android:id="@+id/purchase_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:fontFamily="monospace"
                android:hint="e.g. 1000"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="#050505"
                android:textColorHint="#68050505"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:paddingLeft="20dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:focusable="true"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:fontFamily="monospace"
                android:text="Sale Price"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:focusable="true"
                android:gravity="left"
                android:paddingLeft="10dp">
            </TextView>

            <EditText
                android:id="@+id/sale_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:fontFamily="monospace"
                android:hint="e.g. 5"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="#050505"
                android:textColorHint="#68050505"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:paddingLeft="20dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:focusable="true"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:fontFamily="monospace"
                android:text="Est. Gross Sale"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:focusable="true"
                android:gravity="left"
                android:paddingLeft="10dp">
            </TextView>

            <EditText
                android:id="@+id/gross_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:fontFamily="monospace"
                android:hint="e.g. 1500"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="#050505"
                android:textColorHint="#68050505"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:paddingLeft="20dp"
                android:enabled="false"
                android:padding="20dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:focusable="true"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:fontFamily="monospace"
                android:text="Est. Profit"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:focusable="true"
                android:gravity="left"
                android:paddingLeft="10dp">
            </TextView>

            <EditText
                android:id="@+id/profit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:enabled="false"
                android:fontFamily="monospace"
                android:hint="e.g. 500"
                android:inputType="numberDecimal"
                android:padding="20dp"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="#050505"
                android:textColorHint="#68050505"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:padding="20dp"
            android:text="CANCEL"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="#E65C4F"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

        </TextView>

        <TextView
            android:id="@+id/done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#6BD"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="20dp"
            android:text="DONE"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

        </TextView>

    </LinearLayout>


</LinearLayout>