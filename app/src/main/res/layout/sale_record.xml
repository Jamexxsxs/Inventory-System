<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/add_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="20dp"
            android:text="ADD SALE"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck"/>

        <TextView
            android:id="@+id/manage_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="20dp"
            android:text="MANAGE PRODUCTS"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold">


        </TextView>

        <TextView
            android:id="@+id/add_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="20dp"
            android:text="ADD PRODUCT"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck">

        </TextView>

        <TextView
            android:id="@+id/sale_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="monospace"
            android:text="SALES REPORT"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:focusable="true"
            android:gravity="center"
            android:padding="20dp"
            android:background="#8EBBFF"
            tools:ignore="TextContrastCheck">


        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <LinearLayout
            android:id="@+id/sales"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/blue"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:fontFamily="monospace"
                android:text="Daily Sales"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:focusable="true"
                android:gravity="center"
                android:padding="15dp">

            </TextView>

            <TextView
                android:id="@+id/sales_number"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:fontFamily="monospace"
                android:text="₱0"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:focusable="true"
                android:gravity="center"
                android:padding="15dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/purchase"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="monospace"
            android:textSize="36sp"
            android:textStyle="bold"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/blue"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:fontFamily="monospace"
                android:text="Daily Purchase"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:focusable="true"
                android:gravity="center"
                android:padding="15dp">

            </TextView>

            <TextView
                android:id="@+id/purchase_number"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:fontFamily="monospace"
                android:text="₱0"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:focusable="true"
                android:gravity="center"
                android:padding="15dp">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/table_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <!-- Table Header -->
                <TableRow
                    android:id="@+id/table_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp">

                    <TextView
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="DATE"
                        android:textColor="#050505"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="#CCC"/>

                    <TextView
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="PRODUCT NAME"
                        android:textStyle="bold"
                        android:textColor="#050505"
                        android:gravity="center"
                        android:background="#CCC"/>

                    <TextView
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="PRODUCT PRICE"
                        android:textStyle="bold"
                        android:textColor="#050505"
                        android:gravity="center"
                        android:background="#CCC"/>

                    <TextView
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="QUANTITY"
                        android:textStyle="bold"
                        android:textColor="#050505"
                        android:gravity="center"
                        android:background="#CCC"/>

                    <TextView
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="SUB TOTAL"
                        android:textStyle="bold"
                        android:textColor="#050505"
                        android:gravity="center"
                        android:background="#CCC"/>

                </TableRow>

            </TableLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>