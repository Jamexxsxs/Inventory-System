<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/add_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="20dp"
            android:text="ADD SALE"
            android:textColor="@color/white"
            android:background="#8EBBFF"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck">

        </TextView>

        <TextView
            android:id="@+id/manage_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="20dp"
            android:text="MANAGE PRODUCTS"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/add_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="monospace"
            android:text="ADD PRODUCT"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:focusable="true"
            android:gravity="center"
            android:padding="20dp">

        </TextView>

        <TextView
            android:id="@+id/sale_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="monospace"
            android:text="SALES REPORT"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:focusable="true"
            android:gravity="center"
            android:padding="20dp">


        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150dp"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp">

            <TableLayout
                android:id="@+id/table_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Table Header -->
                <TableRow
                    android:id="@+id/table_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_weight="1"
                        android:background="#CCC"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="PRODUCT NAME"
                        android:textColor="#050505"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_weight="1"
                        android:background="#CCC"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="PRODUCT PRICE"
                        android:textColor="#050505"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_weight="1"
                        android:background="#CCC"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="QUANTITY"
                        android:textColor="#050505"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_weight="1"
                        android:background="#CCC"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="SUBTOTAL"
                        android:textColor="#050505"
                        android:textStyle="bold" />


                </TableRow>

            </TableLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:padding="20dp"
            android:text="CLEAR"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="#E65C4F"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:padding="20dp"
            android:text="ADD"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="#facf58"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:padding="20dp"
            android:text="DONE"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="#6BD"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="monospace"
            android:padding="20dp"
            android:text="â‚±0"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="#d1c9c9"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
</LinearLayout>